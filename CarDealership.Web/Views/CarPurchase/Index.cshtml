@model SalesViewModel

@{
    ViewData["Title"] = "Car Purchases Page";
}

<form asp-controller="CarPurchase" asp-action="Index">
    <div class="row">
        <div class="col">
            <label asp-for="StartDate">Start date</label>
            <input type="date" class="form-control" asp-for="StartDate">
        </div>
        <div class="col">
            <label asp-for="EndDate">End date</label>
            <input type="date" class="form-control" asp-for="EndDate">
        </div>
        <div class="col">
            <button class="btn btn-dark" type="submit">Submit</button>
        </div>
    </div>
    
    <small class="form-text text-muted">
        You can search for car purchases by changing the dates.
    </small>
</form>

<table class="table table-hover table-dark">
    <thead>
        <tr>
            <th></th>
            <th>Sales Person</th>
            <th>Customer</th>
            <th>Car</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var sales in Model.Sales)
    {
        <tr data-href="@Url.Action("Get", "CarPurchase", new { id = sales.Id })">
            <td><i class="fas fa-dollar-sign"></i></td>
            <td>@sales.SalesPerson.Name</td>
            <td>@sales.Customer.Name @sales.Customer.Surname</td>
            <td>@sales.Car.Make @sales.Car.Model</td>
        </tr>
    }
    </tbody>
</table>
