@model CustomerViewModel

@{
    ViewData["Title"] = "Customer Page";
}

<form asp-controller="Customer" asp-action="Index">
    <label asp-for="SearchTerm">Search</label>
    <input type="text" class="form-control" asp-for="SearchTerm">
    <small class="form-text text-muted">
        You can search for customers by either name or address.
    </small>
</form>

<table class="table table-hover table-dark">
    <thead>
        <tr>
            <th></th>
            <th>Name</th>
            <th>Surname</th>
            <th>Address</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var customer in Model.Customers)
    {
        <tr data-href="@Url.Action("Get", "Customer", new { id = customer.Id })">
            <td><i class="fas fa-user"></i></td>
            <td>@customer.Name</td>
            <td>@customer.Surname</td>
            <td>@customer.Address</td>
        </tr>
    }
    </tbody>
</table>
