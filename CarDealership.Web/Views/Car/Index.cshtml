@model List<CarDealership.Domain.ReadModels.Make>

@{
    ViewData["Title"] = "Car Page";
}

<div class="card-deck">
    @foreach (var make in Model)
    {
        <a class="card-link text-dark" href="@Url.Action("Make", "Car", new {id = @make.Id})">
            <div class="card">
                <div class="text-center">
                    <i class="fas fa-car fa-10x"></i>
                </div>
                <div class="card-body">
                    <h5 class="card-title text-center">@make.Name</h5>
                </div>
            </div>
        </a>
    }
</div>